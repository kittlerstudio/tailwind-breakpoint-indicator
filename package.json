{
  "name": "@kittler/tailwind-breakpoint-indicator",
  "version": "1.0.1",
  "description": "Visual breakpoint indicator for Tailwind CSS development",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test:build": "node test/test-build.js",
    "test": "npm run build && npm run test:build",
    "test:server": "node test/server.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "breakpoint",
    "indicator",
    "development",
    "dev-tools",
    "responsive"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.0"
  },
  "peerDependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/kittlerstudio/tailwind-breakpoint-indicator.git"
  }
}
